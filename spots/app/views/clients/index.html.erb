<h3>Listado de clientes</h3>

<%= link_to new_client_path do %>
  <%= image_tag("agregar.gif", :alt => 'Nuevo cliente', :border => 0) %> Nuevo cliente
<% end %>
		
<table class="tabla_repeater">
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Nro ruc</th>
    <th>Correo</th>
    <th>Direccion</th>
    <th>Imagen</th>
    <th>Telefono</th>
    <th>Celular</th>
    <th colspan='3'>Acciones</th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.nombre %></td>
    <td><%= client.apellido %></td>
    <td><%= client.nro_ruc %></td>
    <td><%= client.correo %></td>
    <td><%= client.direccion %></td>
    <td><%= client.imagen %></td>
    <td><%= client.telefono %></td>
    <td><%= client.celular %></td>
    
	<td align="center">
		<%= link_to client_path(client) do %>
		  <%= image_tag("b_browse.png", :alt => 'Mostrar detalle de cliente', :border => 0) %> Mostrar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to edit_client_path(client) do %>
		  <%= image_tag("b_edit.png", :alt => 'Editar cliente', :border => 0) %> Editar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to client, confirm: '¿Está seguro de eliminar el cliente?', method: :delete do %>
		  <%= image_tag("b_drop.png", :alt => 'Eliminar cliente', :border => 0) %> Eliminar
		<% end %>
	</td>
  </tr>
<% end %>
</table>