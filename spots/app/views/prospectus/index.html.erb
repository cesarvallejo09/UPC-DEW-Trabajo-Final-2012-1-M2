<h3>Listado de Prospectos</h3>

<%= link_to new_prospectu_path do %>
  <%= image_tag("agregar.gif", :alt => 'Nuevo prospecto', :border => 0) %> Nuevo prospecto  
<% end %>
|
<%= link_to spots_path do %>
  <%= image_tag("volver.gif", :alt => 'Volver', :border => 0) %> Volver
<% end %>
		
<table class="tabla_repeater">
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Nro ruc</th>
    <th>Correo</th>
    <th>Direccion</th>
    <th>Foto</th>
    <th>Telefono</th>
    <th>Celular</th>
    <th colspan='3'>Acciones</th>
  </tr>

<% @prospectus.each do |prospectu| %>
  <tr>
    <td><%= prospectu.nombre %></td>
    <td><%= prospectu.apellido %></td>
    <td><%= prospectu.nro_ruc %></td>
    <td><%= prospectu.correo %></td>
    <td><%= prospectu.direccion %></td>
    <td><%= image_tag prospectu.imagen.url(:thumb) %></td>
    <td><%= prospectu.telefono %></td>
    <td><%= prospectu.celular %></td>    	    

	<td align="center">
		<%= link_to prospectu_path(prospectu) do %>
		  <%= image_tag("b_browse.png", :alt => 'Mostrar detalle de prospecto', :border => 0) %> Mostrar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to edit_prospectu_path(prospectu) do %>
		  <%= image_tag("b_edit.png", :alt => 'Editar prospecto', :border => 0) %> Editar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to prospectu, confirm: '¿Está seguro de eliminar el prospecto?', method: :delete do %>
		  <%= image_tag("b_drop.png", :alt => 'Eliminar prospecto', :border => 0) %> Eliminar
		<% end %>
	</td>
  </tr>
<% end %>
</table>