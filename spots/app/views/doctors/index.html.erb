<h3>Listado de doctores</h3>

<%= link_to new_doctor_path do %>
  <%= image_tag("agregar.gif", :alt => 'Nuevo doctor', :border => 0) %> Nuevo doctor
<% end %>
		
<table class="tabla_repeater">
  <tr>    
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Correo</th>
    <th>Telefono</th>
    <th>Administrador</th>
    <th>Usuario</th>
    <th colspan='3'>Acciones</th>
  </tr>

<% @doctors.each do |doctor| %>
  <tr>    
    <td><%= doctor.nombre %></td>
    <td><%= doctor.apellido %></td>
    <td><%= doctor.correo %></td>
    <td><%= doctor.telefono %></td>
    <td><%= doctor.administrador %></td>
    <td><%= doctor.user %></td>    
    
	<td align="center">
		<%= link_to doctor_path(doctor) do %>
		  <%= image_tag("b_browse.png", :alt => 'Mostrar detalle de doctor', :border => 0) %> Mostrar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to edit_doctor_path(doctor) do %>
		  <%= image_tag("b_edit.png", :alt => 'Editar doctor', :border => 0) %> Editar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to doctor, confirm: '¿Está seguro de eliminar el doctor?', method: :delete do %>
		  <%= image_tag("b_drop.png", :alt => 'Eliminar doctor', :border => 0) %> Eliminar
		<% end %>
	</td>
  </tr>
<% end %>
</table>