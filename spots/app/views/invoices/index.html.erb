<h3>Facturas</h3>

<%= link_to new_invoice_path do %>
  <%= image_tag("agregar.gif", :alt => 'Nueva factura', :border => 0) %> Nueva factura
<% end %>
|
<%= link_to spots_path do %>
  <%= image_tag("volver.gif", :alt => 'Volver', :border => 0) %> Volver
<% end %>

<table  class="tabla_repeater">
  <tr>
    <th>Fecha</th>
    <th>Subtotal</th>
    <th>Igv</th>
    <th>Total</th>
	<th colspan='3'>Acciones</th>
	</tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.fecha %></td>
    <td><%= invoice.subtotal %></td>
    <td><%= invoice.igv %></td>
    <td><%= invoice.total %></td>

	<td align="center">
		<%= link_to invoice_path(invoice) do %>
		  <%= image_tag("b_browse.png", :alt => 'Mostrar detalle de factura', :border => 0) %> Mostrar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to edit_invoice_path(invoice) do %>
		  <%= image_tag("b_edit.png", :alt => 'Editar factura', :border => 0) %> Editar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to invoice, confirm: '¿Está seguro de eliminar la factura?', method: :delete do %>
		  <%= image_tag("b_drop.png", :alt => 'Eliminar factura', :border => 0) %> Eliminar
		<% end %>
	</td>

  </tr>
<% end %>
</table>
