<h3>Listado de Notas de Clientes</h3>

<table class="tabla_repeater">
  <tr>
    <th>Client</th>
    <th>Fecha</th>
    <th>Comentario</th>
<th colspan='3'>Acciones</th>
  </tr>

<% @note_clients.each do |note_client| %>
  <tr>
    <td><%= note_client.client %></td>
    <td><%= note_client.fecha %></td>
    <td><%= note_client.comentario %></td>
    <td><%= link_to 'Mostrar', note_client %></td>
    <td><%= link_to 'Editar', edit_note_client_path(note_client) %></td>
    <td><%= link_to 'Eliminar', note_client, confirm: 'Are you sure?', method: :delete %></td>
	
	<td align="center">
		<%= link_to note_client_path(note_client) do %>
		  <%= image_tag("b_browse.png", :alt => 'Mostrar detalle de nota de cliente', :border => 0) %> Mostrar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to edit_note_client_path(note_client) do %>
		  <%= image_tag("b_edit.png", :alt => 'Editar nota de cliente', :border => 0) %> Editar
		<% end %>
	</td>
		
	<td align="center">
		<%= link_to note_client, confirm: '¿Está seguro de eliminar la nota?', method: :delete do %>
		  <%= image_tag("b_drop.png", :alt => 'Eliminar nota de cliente', :border => 0) %> Eliminar
		<% end %>
	</td>

	
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Note client', new_note_client_path %>
